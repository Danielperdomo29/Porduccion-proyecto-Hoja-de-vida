{
  "name": "hojadevida-backend",
  "version": "1.0.0",
  "description": "Backend para Hoja de Vida con Express, MongoDB, Passport y Helmet",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build:css": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/output.css --watch",
    "build:prod": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/output.css --minify",
    "dev": "concurrently \"npm run build:css\" \"nodemon server.js\"",
    "prod": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "dotenv": "^17.2.0",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "mongoose": "^7.8.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.6",
    "openai": "^5.18.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "sharp": "^0.34.4",
    "string-similarity": "^4.0.4",
    "validator": "^13.15.15",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0"
  },
  "overrides": {
    "cookie": "^0.7.2"
  }
}